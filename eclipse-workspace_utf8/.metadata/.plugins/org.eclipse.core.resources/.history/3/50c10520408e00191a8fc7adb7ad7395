package common.pojo;

import java.util.ArrayList;
import java.util.List;

public class JsonMobileCommodities {

	private String msg; // 响应信息
	private boolean success; // 操作是否成功
	private List commodityList = new ArrayList(0);// 广告轮播数据集
	public String getMsg() {
		return msg;
	}

	public void setMsg(String msg) {
		this.msg = msg;
	}

	public boolean isSuccess() {
		return success;
	}

	public void setSuccess(boolean success) {
		this.success = success;
	}

	public List getHeadAdverts() {
		return commodityList;
	}

	public void setHeadAdverts(List commodityList) {
		this.commodityList = commodityList;
	}

	
	public JsonMobileCommodities(String msg, boolean success, List headAdverts, List firstAdverts, List secondAdverts, List seckills, List firstPromotions, List secondPromotions) {
		this.msg = msg;
		this.success = success;
		this.headAdverts.addAll(headAdverts);
		
	}

	public JsonMobileCommodities() {
		super();
	}
}
