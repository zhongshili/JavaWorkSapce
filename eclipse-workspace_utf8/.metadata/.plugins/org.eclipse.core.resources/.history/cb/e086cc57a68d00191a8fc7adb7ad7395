package service;

import java.sql.Connection;
import java.sql.SQLException;
import java.util.ArrayList;

import common.pojo.User;
import common.pojo.JsonMsg;
import common.pojo.JsonRs;
import common.util.DButil;
import user.dao.UserDAOImpl;

public class UserServiceImpl implements UserService {

	/* 查询业务 */
	public JsonRs selectByPage(User user) {
		Connection conn = DButil.getConnection();
		UserDAOImpl userDAO = new UserDAOImpl(conn);
		try {
			ArrayList<User> userList = new ArrayList<User>();
			userList = userDAO.select(user);// 返回记录集
			int total = userList.size();// 获取记录数
			conn.commit();
//			自动封装成json数据格式
			return new JsonRs("查询成功", true, total, userList);
		} catch (Exception e) {
			try {
				conn.rollback();
			} catch (SQLException e1) {
				e1.printStackTrace();
			}
			return new JsonRs("查询失败", false, 0, null);
		} finally {
			if (conn != null) {
				DButil.closeConnection(conn);
			}
		}
	}

	// 查询单条数据
	public User findOrderInfoById(String id) {
		Connection conn = DButil.getConnection();
		UserDAOImpl userDAO = new UserDAOImpl(conn);
		User user = null;
		try {
			user = userDAO.findOrderInfoById(id);
		} catch (SQLException e) {
			e.printStackTrace();
		} finally {
			if (conn != null) {
				DButil.closeConnection(conn);
			}
		}
		return user;
	}

	/* 添加业务 */
	public JsonMsg insert(User user) {
		Connection conn = DButil.getConnection();
		UserDAOImpl userDAO = new UserDAOImpl(conn);
		try {
			userDAO.insert(user);
			conn.commit();
			return new JsonMsg("添加成功", true);
		} catch (Exception e) {
			e.printStackTrace();
			try {
				conn.rollback();
			} catch (SQLException e1) {
				e1.printStackTrace();
			}
			return new JsonMsg("添加失败", false);
		} finally {
			if (conn != null) {
				DButil.closeConnection(conn);
			}
		}
	}

	/* 更新业务 */
	public JsonMsg update(User user) {
		Connection conn = DButil.getConnection();
		UserDAOImpl userDAO = new UserDAOImpl(conn);
		try {
			userDAO.update(user);
			conn.commit();
			return new JsonMsg("更新成功", true);
		} catch (Exception e) {
			try {
				conn.rollback();
			} catch (SQLException e1) {
				e1.printStackTrace();
			}
			return new JsonMsg("更新失败", false);
		} finally {
			if (conn != null) {
				DButil.closeConnection(conn);
			}
		}
	}

	/* 删除业务 */
	public JsonMsg delete(User user) {
		Connection conn = DButil.getConnection();
		UserDAOImpl userDAO = new UserDAOImpl(conn);
		try {
			userDAO.delete(user);
			conn.commit();
			return new JsonMsg("删除成功", true);
		} catch (Exception e) {
			try {
				conn.rollback();
			} catch (SQLException e1) {
				e1.printStackTrace();
			}
			return new JsonMsg("删除失败", false);
		} finally {
			if (conn != null) {
				DButil.closeConnection(conn);
			}
		}
	}
}